<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VisualAxe.App"
             xmlns:local="using:VisualAxe"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml"/>
        <StyleInclude Source="avares://VisualAxe/Icons.axaml"/>
    </Application.Styles>

	<TrayIcon.Icons>
		<TrayIcons>
			<TrayIcon Icon="avares://VisualAxe/Assets/avalonia-logo.ico"
					  ToolTipText="VisualAxe">
				<TrayIcon.Menu>
					<NativeMenu>
						<NativeMenuItem Header="ウィンドウを表示" Click="ShowMenuItem_Click"/>
						<NativeMenuItemSeparator />
						<NativeMenuItem Header="終了" Click="ShutdownMenuItem_Click"/>
					</NativeMenu>
				</TrayIcon.Menu>
			</TrayIcon>
		</TrayIcons>
	</TrayIcon.Icons>
</Application>