<UserControl	xmlns="https://github.com/avaloniaui"
			xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			MinWidth="200"
			x:Class="VisualAxe.Views.SideView"
			xmlns:vm="clr-namespace:VisualAxe.ViewModels"
			x:DataType="vm:SideViewModel">
	<StackPanel Margin="16">
		<Border MaxHeight="400" VerticalAlignment="Center">
			<Panel Background="Purple">
				<Image Height="200" />
			</Panel>
		</Border>

		<TextBlock Text="{Binding Title}" 
				   Margin="0 16 0 0"
				   TextWrapping="WrapWithOverflow"/>
		<Button Content="URL"
				Margin="0 16 0 0"/>
		<TextBlock Text="メモ" FontSize="16" Margin="0 16 0 0"/>
		<TextBox Text="{Binding Memo}"
				Watermark="メモを入力"
				Height="200"
				Margin="0 4 0 0"/>
	</StackPanel>
</UserControl>
